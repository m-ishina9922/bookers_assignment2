<h2>Books</h2>

<table>
  <tr><th>Title</th><th>Body</th></tr>
  
  <% @books.each do |book| %>
  
  <tr>
  <td class="table-title"><%= book.title %></td>
  <td><%= book.body %></td>
  <td><a class="link"><%= link_to "Show" , book_path(book.id) %></a></td>
  <td><a class="link"><%= link_to "Edit" , edit_book_path(book.id) %></a></td>
  <td><a class="link"><%= link_to "Destroy" , book_path(book.id), method: :delete , "data-confirm" => "Are you sure?" %></a></td>
  </tr>

  <% end %>
</table>

<div class="new-book">

<h3>New book</h3>
  
  <% if @book.errors.any? %>
   <%= @book.errors.count %>error has occurred

  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li> <%= message %></li>
   <% end %>
  </ul>

  <% end %>

  <%= form_with model: Book.new do |f| %>

  <p class="new-book-title">Title<p>
   <%= f.text_field :title %>

  <p class="new-book-body">Body</p>
   <%= f.text_area :body %>

  <p class="new-book-submit"><%= f.submit 'Create Book' %></p>

   <% end %>
 
</div>
