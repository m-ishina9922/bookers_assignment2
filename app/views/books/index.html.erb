<body>
<h1>Books</h1>

<table>
  <tr><th>Title</th><th>Body</th></tr>
  
  <% @books.each do |book| %>
  
  <tr>
  <td class="table-title"><%= book.title %></td>
  <td><%= book.body %></td>
  <td><a><%= link_to "Show" , book_path(book.id) %></a></td>
  <td><a><%= link_to "Edit" , edit_book_path(book.id) %></a></td>
  <td><a><%= link_to "Destroy" , book_path(book.id), method: :delete , "data-confirm" => "Are you sure?" %></a></td>
  </tr>

  <% end %>
</table>

<div class="new-book">

<h2>New book</h2>
  
  <% if @book.errors.any? %>
   <%= @book.errors.count %>error has occurred

  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li> <%= message %></li>
   <% end %>
  </ul>

  <% end %>

  <%= form_with model: Book.new do |f| %>

  <p>Title<p>
    <a class="new-book-title"><%= f.text_field :title %></a>

  <p>Body<p>
    <a class="new-book-body"><%= f.text_area :body %></a>

  <p class="new-book-submit"><%= f.submit 'Create Book' %></p>

   <% end %>
 
</div>
</body>